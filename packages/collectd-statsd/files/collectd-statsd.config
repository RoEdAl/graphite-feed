
config service 'service'
	option enable '0'
	option Interval '15'
	option BaseDir '/run/collectd-statsd'
	option CreateBaseDir '1'
	option ChownBaseDir '1'

config plugin 'statsd'
	option Port '8125'
	option DeleteCounters '1'
	option DeleteTimers '1'
	option DeleteGauges '1'
	option DeleteSets '1'
	option CounterSum '0'
	option TimerLower '0'
	option TimerUpper '0'
	option TimerSum '0'
	option TimerCount '0'

config plugin 'graphite'
	option Port '2003'
	option Protocol 'udp'
	option ReconnectInterval '0'
	option LogSendErrors '1'
	option EscapeCharacter '_'
	option StoreRates '0'
	option SeparateInstances '0'
	option AlwaysAppendDS '0'
	option PreserveSeparator '1'
	option DropDuplicateFields '1'
	option UseTags '0'
	option ReverseHost '0'
